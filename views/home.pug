extends layout.pug

block number1
    if error
        p.error Please Fill the input

    if success
        p.success Good Job

    if deleted
        p.success Deleted 

    form.form(action='/add' method='POST')
        input.input(type='text', placeholder='Add your todo' name='todo')
        button.btn Add

    div.todos
        if (todos.length)  
            each todo in todos
                p.todo 
                    if todo.done
                        a.done(href=`/${ todo.id}/update`) #{ todo.description}
                    else
                        a.undone(href=`/${ todo.id}/update`) #{ todo.description}
                    div.delete_update_container
                        a.delete(href=`/${ todo.id }/delete`) Delete
                        a.update(href=`/${ todo.id }/update`) Update
        else
            p.todo No Tasks!